<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_product"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/height_list_product"
            android:layout_height="@dimen/height_list_product">
            <ImageView
                android:id="@+id/imgPicture"
                android:layout_width="@dimen/height_list_product"
                android:layout_height="@dimen/height_list_product"
                android:scaleType="centerCrop"
                android:src="@drawable/total_clean" />
            <sellit.soict.com.view.TextViewRobotoRegular
                android:text="3"
                android:id="@+id/countPic"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:shadowColor="#123456"
                android:shadowRadius="2"
                android:shadowDy="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <sellit.soict.com.view.TextViewRobotoRegular
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvPrice"
                android:layout_alignParentTop="true"
                android:text="Galaxy s7"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/item_name" />

            <sellit.soict.com.view.TextViewRobotoMedium
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvDate"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="2.600.000 vnd"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/item_price" />

            <sellit.soict.com.view.TextViewRobotoLight
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="15:50"
                android:textAppearance="?android:attr/textAppearanceSmall" />


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

